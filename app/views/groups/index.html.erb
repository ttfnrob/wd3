<h1><a href="/">War Diaries Data Digger</a>: Diaries</h1>
<div style="width: 33%; float:left;">
  <h2>Complete</h2>
  <ol>
  <% @diaries.select{|t| t['state'] == 'complete' }.each do |diary| %>
    <li><a href="/diaries/<%= diary.zooniverse_id %>"><%= diary.name %></a> (<%= diary.completed %>%) <b>(<%= diary.classifications_per_page %>)</b></li>
  <% end %>
  </ol>
</div>
