<% 
  n = 0
%>
<a href="#diary">Diaries</a>
<a href="#signals">Signals</a>
<a href="#reports">Reports</a>
<a href="#orders">Orders</a>
<table id="diary" class="export">
  <caption>Diary pages</caption>
  <thead>
    <th>Tag</th>
    <th>Page</th>
    <th>Page number</th>
    <th>Count</th>
    <th>DateTime</th>
    <th>Date</th>
    <th>Place</th>
    <th>Lat/Lon</th>
    <th>Time</th>
    <th>Type</th>
    <th>Label</th>
    <th>Data</th>
  </thead>
  <tbody>
  <% @timeline.each do |d| %>
    <% n += 1 %>
    <tr>
      <td><%= n %></td>
      <td><%= d["page"] %></td>
      <td><%= d["page_number"] %></td>
      <td><%= d["count"] %></td>
      <td class="nowrap"><%= d['datetime'] %></td>
      <td class="nowrap"><%= d['date'] %></td>
      <td><%= d['place'] %></td>
      <td><%= d['lat'] %>, <%= d['long'] %></td>
      <td><%= d['time'] %></td>
      <td><%= d["type"] %></td>
      <td><%= d['label'] %></td>
      <td>
        <% d['votes'].each do |k,v| %>
        <%= k %>: <%= v.keys.join(', ') %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

