<% 
  n = 0
  date = ''
  place = ''
  time = ''
%>
<table>
  <thead>
    <th>Tag</th>
    <th>Page</th>
    <th>Page number</th>
    <th>Count</th>
    <th>Date</th>
    <th>Place</th>
    <th>Time</th>
    <th>Type</th>
    <th>Label</th>
    <th>Data</th>
  </thead>
  <tbody>
  <% @tags.each do |d| %>
    <% n += 1 %>
    <% case d["type"] %>
    <% when "diaryDate" %>
    <% date = d["label"] %>
    <% time = '' %>
    <% when "time" %>
    <% time = d["label"] %>
    <% when "place" %>
    <% place = d["label"] if d["votes"]["location"].keys == ['true'] %>
    <% end %>
    <tr>
      <td><%= n %></td>
      <td><%= d["page"] %></td>
      <td><%= d["page_number"] %></td>
      <td><%= d["count"] %></td>
      <td class="nowrap"><%= date %></td>
      <td><%= place %></td>
      <td><%= time %></td>
      <td><%= d["type"] %></td>
      <td><%= d['label'] %></td>
      <td>
        <% d['votes'].each do |k,v| %>
        <%= k %>: <%= v.keys.join(', ') %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>